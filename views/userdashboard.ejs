<!DOCTYPE html>
<html lang="tr">
<head>
    <title>User Dashboard</title>
    <link rel="stylesheet" href="/styles/style.css">
</head>

<body class="home-page">

<div class="main-container">

    <!-- LEFT PANEL -->
    <div class="left-panel">

        <div class="header">
            <h1>Welcome <%= username %>!</h1>
            <a href="/logout" class="btn">Logout</a>
        </div>

        <hr>

        <div class="form-section">

            <!-- ADD PRODUCT -->
            <div class="add-product-section card">
                <h2>Add New Product</h2>

                <form action="/add-product" method="POST">
                    <label>Product Name</label>
                    <input type="text" name="name" class="input" required>

                    <label>Description</label>
                    <textarea name="description" rows="4" class="input" required></textarea>

                    <label>Price</label>
                    <input type="number" name="price" class="input" required>

                    <label>Category</label>
                    <select name="category" class="input" required>
                        <% categories.forEach(i => { %>
                            <option value="<%= i.id %>"><%= i.name %></option>
                        <% }) %>
                    </select>

                    <button type="submit" class="btn">Add Product</button>
                </form>
            </div>

            <!-- ADD CATEGORY -->
            <div class="add-category-section card">
                <h2>Add New Category</h2>

                <form action="/add-category" method="POST">
                    <label>Category Name</label>
                    <input type="text" name="categoryName" class="input" required>
                    <button type="submit" class="btn">Add Category</button>
                </form>

                <div class="category-list">
                    <h3>Existing Categories</h3>
                    <ul>
                        <% categories.forEach(i => { %>
                            <li>
                                <span><%= i.name %></span>
                                <form action="/delete-category" method="POST">
                                    <input type="hidden" name="categoryId" value="<%= i.id %>">
                                    <button class="btn delete-btn">X</button>
                                </form>
                            </li>
                        <% }) %>
                    </ul>
                </div>
            </div>

        </div>
    </div>

    <!-- RIGHT PANEL -->
    <div class="right-panel">
        <h2>Products</h2>

        <% if (products.length > 0) { %>
            <ul class="product-list">
                <% products.forEach(product => { %>
                    <li>
                        <strong><%= product.name %></strong>
                        <ul>
                            <li>Description: <%= product.description %></li>
                            <li>Price: <%= product.price %> TL</li>
                            <li>Date: <%= product.createdAt.toLocaleDateString() %></li>
                            <li>Category: <%= product.category.name %></li>
                        </ul>

                        <form action="/delete-product" method="POST">
                            <input type="hidden" name="productId" value="<%= product.id %>">
                            <button class="btn delete-btn">Delete</button>
                        </form>
                    </li>
                <% }) %>
            </ul>
        <% } else { %>
            <p>There are no products yet.</p>
        <% } %>
    </div>

</div>

</body>
</html>